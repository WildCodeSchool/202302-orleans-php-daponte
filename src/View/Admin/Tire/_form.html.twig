<ul class="errors">
	{% for error in errors %}
		<li>{{ error }}</li>
	{% endfor %}
</ul>
<form action="" method="POST">
	<label for="name">Nom</label>
	<input type="text" id="name" name="name" required maxlength="255" value="{{ tire.name }}">

	<label for="price">Prix</label>
	<input type="number" step="0.1" id="price" name="price" min="0" required value="{{ tire.price }}">

	<label for="description">Description</label>
	<textarea name="description" id="description" cols="30" rows="10">
		{{- tire.description -}}
	</textarea>

	<button>{{ buttonName|default('Ajouter') }}</button>
</form>
