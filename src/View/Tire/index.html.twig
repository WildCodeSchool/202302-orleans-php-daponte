{% extends 'layout.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="assets/css/tire.css">
{% endblock %}

{% block title %}
	{{ parent() }}
	| Pneus
{% endblock %}

{% block content %}
	<main class="container-fluid">
		<h1>Choisir un pneu</h1>

        <form action="" method="GET">
            <label for="search_tire">Nom de pneu</label>
            <input id="search_tire" type="search" name="search">
            <button>Search</button>
        </form>

		<div class="grid">
            {% for tire in tires %}
                <article>
                    <header>
                        <img src="{{ tire.image ? 'uploads/' ~ tire.image : 'assets/images/pneu_placeholder.webp' }}" alt="image du pneu {{ tire.name }}">
                    </header>
                    <h1>{{ tire.name}}</h1>
                    <h2>{{ tire.category }}</h2>
                    {{ tire.price}}â‚¬
                </article>
            {% endfor %}
			
		</div>
	</main>
{% endblock %}
